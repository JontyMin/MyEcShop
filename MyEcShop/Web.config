<?xml version="1.0"?>
<configuration>
  <system.webServer>
    <security>
      <requestFiltering>
        <requestLimits maxQueryString="10240">
         
        </requestLimits>
        
      </requestFiltering>
      
    </security>
    
  </system.webServer>
	<appSettings/>
	<connectionStrings>
		<add name="con" connectionString="server=.;database=ECSHOP;uid=sa;pwd=123"/>
	</connectionStrings>
	<system.web>
    <customErrors mode="On" redirectMode="ResponseRewrite" defaultRedirect="404.html">
      <error statusCode="404" redirect="404.html"/>
      <!--<error statusCode="500" redirect="500.htm"/>-->
    </customErrors>
    <httpRuntime maxRequestLength="999999999" maxQueryStringLength="2097151" />
		<compilation debug="true" targetFramework="4.7.2">
		</compilation>
		<!--
            通过 <authentication> 节可以配置
            安全身份验证模式，ASP.NET 
            使用该模式来识别来访用户身份。 
        -->
		<authentication mode="Windows"/>
		<!--
            如果在执行请求的过程中出现未处理的错误，
            则通过 <customErrors> 节
            可以配置相应的处理步骤。具体而言，
            开发人员通过该节可配置要显示的 html 错误页，
            以代替错误堆栈跟踪。-->

        
		<pages controlRenderingCompatibilityVersion="3.5" clientIDMode="AutoID"/></system.web>
</configuration>
